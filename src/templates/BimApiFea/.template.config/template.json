{
    "$schema": "http://json.schemastore.org/template",
    "author": "IDEA StatiCa",
    "classifications": ["ideastatica", "checkbot"],
    "identity": "ideastatica.bimapifeaapp.01",
    "name": "IDEA StatiCa Checkbot Client FEA App",
    "shortName": "bimapifeaapp",
    "tags": {
        "type": "solution",
        "language": "C#"
    },
    "sourceName": "BimApiClientApp",
    "preferNameDirectory": true,
    "symbols": {
      "BimApiFeaApp": {
        "type": "parameter",
        "datatype": "string",
        "defaultValue": "BimApiFeaApp",
        "replaces": "BimApiFeaApp",
        "description": "WPF application which simulates a FEA application"
      },
      "BimApiFeaLink": {
        "type": "parameter",
        "datatype": "string",
        "defaultValue": "BimApiFeaLink",
        "replaces": "BimApiFeaLink",
        "description": "Implementation of BIM API for converting objects in a FEA Model to BIM API objects"
      },
      "CheckbotClient": {
        "type": "parameter",
        "datatype": "string",
        "defaultValue": "CheckbotClient",
        "replaces": "CheckbotClient",
        "description": "Responsible for running and communicating with IDEA Checkbot"
      },
      "FeaApi": {
        "type": "parameter",
        "datatype": "string",
        "defaultValue": "FeaApi",
        "replaces": "FeaApi",
        "description": "Mock of a FEA API"
      },
      "solutionName": {
        "type": "parameter",
        "datatype": "string",
        "defaultValue": "BimApiFea",
        "fileRename": "BimApiFea"
      },
      "includeSolution": {
        "type": "parameter",
        "datatype": "bool",
        "defaultValue": "true"
      },
      "Framework": {
        "type": "parameter",
        "description": "The target framework for the project.",
        "datatype": "choice",
        "choices": [
          {
            "choice": "net6.0-windows",
            "description": "Target net6.0-windows"
          },
          {
            "choice": "net48",
            "description": "Target net48"
          }          
        ],
        "replaces": "net6.0-windows",
        "defaultValue": "net6.0-windows"
      }     
    },
    "sources": [
      {
        "modifiers": [
          {
            "condition": "(!excludeBimApiFeaApp)",
            "rename": {
              "BimApiFeaApp": "src/{{projectBimApiFeaApp}}"
            }
          },
          {
            "rename": {
              "BimApiFeaLink": "src/{{projectBimApiFeaLink}}"
            }
          },
          {
            "rename": {
              "CheckbotClient": "src/{{projectCheckbotClient}}"
            }
          },
          {
            "rename": {
              "FeaApi": "src/{{projectFeaApi}}"
            }
          },
          {
            "condition": "includeSolution",
            "modifiers": [
              {
                "rename": {
                  "BimApiFea.sln": "{{solutionName}}.sln"
                }
              }
            ]
          }                    
        ]
      }
    ],
    "primaryOutputs": [
      {
        "path": "src/{{projectBimApiFeaApp}}/{{projectBimApiFeaApp}}.csproj"
      },
      {
        "path": "src/{{projectBimApiFeaLink}}/{{projectBimApiFeaLink}}.csproj"
      },
      {
        "path": "src/{{projectCheckbotClient}}/{{projectCheckbotClient}}.csproj"
      },
      {
        "path": "src/{{projectFeaApi}}/{{projectFeaApi}}.csproj"
      }
    ],
    "guids": [
      "8743EA91-ECF3-47F1-96B2-ED98031C5B08",
      "42F1711F-14C8-4122-AA4A-E1F5B7D5855A",
      "9DFD288F-3F71-43BA-ABCC-636FD5804087",
      "A527AC3C-2F72-49F0-B697-461827E3E8EA"     
    ]
}